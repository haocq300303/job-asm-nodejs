<style>
  #main{ width: 1200px; margin: 0 auto; margin-top: 150px; padding: 0 5%; }
  .text_cart{ display: flex; align-items: center; margin-bottom: 20px; }
  .text_cart p:nth-child(1){ cursor: pointer; } .text_cart p:nth-child(3){
  color: #888; cursor: pointer; } .item-cart{ margin-top: 80px; display: grid;
  grid-template-columns: 5.5fr 2.5fr; column-gap: 15px; } .table-cart table{
  border: #888 1px solid; padding: 10px 30px ; border-radius: 10% 0 0 10%; }
  .table-cart table tr, th,td{ padding: 20px 30px; text-align: center; }
  .table-cart table tr td{ font-size: 12px; color: #555; } .table-cart table
  .bxs-down-arrow,.bxs-up-arrow{ font-size: 18px; cursor: pointer; transition:
  .5s; } .table-cart table .bxs-down-arrow:hover,.bxs-up-arrow:hover{ color:
  #6775d6; transition: .5s; } #total_table{ background-color: #b2b2b241;
  border-radius: 0% 80%; } #price_total{ border-radius: 60% 0%; color: #fff;
  font-size: 15px; background-color: #6776d6ce; } .table-cart table tr td input{
  width: 40px; height: 40px; text-align: center; border-radius: 50%;
  background-color: rgba(136, 136, 136, 0.13); border: none; } .table-cart table
  #update input{ width: 150px; justify-content: space-between; border-radius: 0;
  border-radius: 20px; transition: .3s; cursor: pointer; } .table-cart table
  #update input:nth-child(2){ margin: 0px 60px; } .table-cart table #update
  :hover{ background-color: #6775d6; color: #fff; transition: .3s; } .table-cart
  table #update input:nth-child(1){ border-radius:0px 0px 0px 30px ; color:
  #888; font-size: 14px; background: transparent; border: 1px solid gray; }
  .cart-total{ border: 1px solid gray; padding: 30px 20px; border-radius: 0px
  10% 10% 0; } .Subtotal{ display: grid; grid-template-columns: 1.5fr 3fr ;
  column-gap: 20px; align-items: center; margin-top: 20px; padding: 0px 0px 8px
  0px; border-bottom: 1px dotted gray; } .Shipping{ display: grid;
  grid-template-columns: 1.5fr 3fr ; column-gap: 20px; border-bottom: 1px dotted
  gray; padding: 0px 0px 10px 0px; margin-top: 5px; } .Subtotal
  p:nth-child(2),.text-shipping p{ color: #888; font-size: 11px; }
  .text-shipping p:nth-child(2){ margin: 10px 0; } .text-shipping select,input{
  width: 100%; margin: 5px 0px; padding: 5px; font-size: 10px; border: 1px solid
  #555; border-radius: 10px; } .text-shipping form input:nth-child(4){
  border-radius: 20px; border: none; font-size: 5px; width: 70%; text-align:
  center; cursor: pointer; transition: .3s linear; } .text-shipping form
  input:nth-child(4):hover{ background-color: #6775d6; color: #fff; transition:
  .3s linear; } .total-cart{ display: grid; grid-template-columns: 3fr 5fr;
  margin-top: 8px; } .cart-total>input{ margin-top: 10px; padding: 10px; border:
  none; background-color: #2F3034; color: #fff; transition: .3s linear; cursor:
  pointer; } .cart-total>input:hover{ background-color: #6775d6; transition: .3s
  linear; }
</style>

<div id="main">

  <div class="text_cart">
    <p>HOME</p>
    <i class="bx bx-chevron-right"></i>
    <p>Shoping Cart</p>
  </div>
  <div class="style"></div>

  <div class="item-cart">

    <div class="table-cart">
      <table>
        <tr>
          <th>IMG</th>
          <th>PRODUCT</th>
          <th>PRICE</th>
          <th>QUANTITY</th>
          <th>TOTAL</th>
        </tr>
        <tr>
          <td>
            <img src="/img/cart1.webp" alt="" />

          </td>
          <td>Fresh Strawberries</td>
          <td>$ <span>36.00</span></td>
          <td>
            <i class="bx bxs-down-arrow"></i>
            <input type="text" name="" value="0" id="" />
            <i class="bx bxs-up-arrow"></i>
          </td>
          <td>$ <span>36.00</span></td>
        </tr>
        <tr>
          <td>
            <img src="/img/cart2.webp" alt="" />
          </td>
          <td>Lightweight Jacket</td>
          <td>$ <span>16.00</span></td>
          <td>
            <i class="bx bxs-down-arrow"></i>
            <input type="text" name="" value="0" id="" />
            <i class="bx bxs-up-arrow"></i>
          </td>
          <td>$ <span>16.00</span></td>
        </tr>
        <tr>
          <td id="total_table" colspan="4">TOTAL</td>
          <td id="price_total">0</td>
        </tr>
        <tr>
          <td colspan="5" id="update">
            <input type="text" placeholder="Coupon Code" />
            <input type="submit" value="APPLY COUPON" />
            <input type="submit" value="UPDATE CART" />
          </td>
        </tr>
      </table>
    </div>

    <div class="cart-total">

      <h3>CART TOTALS</h3>

      <div class="Subtotal">
        <p>Subtotal:</p>
        <p><span>$</span>79.65</p>
      </div>

      <div class="Shipping">
        <div class="text">
          <p>Shipping:</p>
        </div>

        <div class="text-shipping">

          <p>
            There are no shipping methods available. Please double check your
            address, or contact us if you need any help.</p>
          <p>CALCULATE SHIPPING</p>
          <form action="" onsubmit="return validateCart()">
            <select name="" id="option">
              <option value="0">select a country</option>
              <option value="1">Thai Binh</option>
              <option value="2">Ha Noi</option>
              <option value="3">Quang Lich</option>
            </select>
            <input type="text" id="state" placeholder="State / country" />
            <input type="text" id="postcode" placeholder="Postcode / Zip" />
            <input type="submit" name="" value="UPDATE TOTALS" id="" />

          </form>

        </div>
      </div>
      <div class="total-cart">
        <p>Total</p>
        <p><span>$</span>79.65</p>
      </div>
      <input type="submit" value="PROCEED TO CHECKOUT" name="" id="" />
    </div>
  </div>

</div>